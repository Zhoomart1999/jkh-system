{
  "name": "gis-housing-and-utilities-kg",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "vite build && electron .",
    "electron:pack": "vite build && electron-builder --dir",
    "electron:dist": "vite build && electron-builder",
    "start": "npm run dev & npm run electron:dev"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "express": "^5.1.0",
    "jspdf": "2.5.1",
    "jspdf-autotable": "3.8.2",
    "leaflet": "^1.9.4",
    "node-cron": "^4.2.0",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.6.2",
    "recharts": "^3.0.2",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.19",
    "@types/node": "^22.14.0",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.tokmok.gis",
    "productName": "ЖКХ Токмок",
    "copyright": "Copyright © 2024 Токмок Водоканал",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/fonts/",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "build/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tokmok",
        "repo": "gis-housing-and-utilities-kg"
      }
    ],
    "asar": true
  }
}
